<!-- book編集 -->
<div class="container">
  <% if @book.errors.any? %>
    <%= @book.errors.count %>件のエラーが発生しました
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <br><%= f.label "Title" %><br>
          <%= f.text_field :title, autofocus: true, class: 'form-control book_title' %>
        </div>
        
        <div class="form-group">
          <br><%= f.label "Opinion" %><br>
          <%= f.text_area :body, class: 'form-control book_body' %>
        </div>
    
        <div class="form-group">
          <%= f.submit "Update Book", class: 'btn btn-success' %>
        </div>
        
        <%= link_to "Show", book_path(@book.id) %>
         | 
        <%= link_to "Back", books_path %>
    
      <% end %>
    </div>
  </div>
</div>