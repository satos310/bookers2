<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <!-- get_profile_image => use.profileに登録の画像を取り出している -->
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
        <i class="fas fa-user-cog"></i>
      </div>
    </div>

    <div class="col-mid-8 offset-md-1"></div>
  </div>
</div>