<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <!-- get_profile_image => use.profileに登録の画像を取り出している -->
      <!-- 投稿 → エラー発生中 -->
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <%= link_to edit_user_path(current_user.id), class: 'btn btn-outline-secondary btn-block' do %>
          <i class="fas fa-user-cog"></i>
        <% end %>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new do |f| %>
        <div class="form-group">
          <div class="field">
            <br><%= f.label "Title" %><br>
            <%= f.text_field :title, class: 'form-control book_title' %>
          </div>
        </div>

        <div class="form-group">
          <div class="field">
            <br><%= f.label "Opinion" %><br>
            <%= f.text_area :body, class: 'form-control book_body' %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit "Create Book", class: 'btn btn-success' %>
        </div>

      <% end %>
    </div>

    <div class="col-mid-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to book_path(book.id) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>